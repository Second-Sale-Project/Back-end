        rec_movie_3 = rec_movie_sort[0:3]#評価の高い映画を3つ抽出\n","        print(rec_movie_3)\n","print(\"\\n\")\n","\n","# 距離近的優先列出\n","# n_neighbors=11是包含指定這，列出的數量\n","Brand = 25          #指定brandID\n","distance, indice = rec_model.kneighbors(df_piv.iloc[df_piv.index== Brand].values.reshape(1,-1),n_neighbors=11)\n","for i in range(11):\n","    if  i == 0:  #i=0是指選的brand。\n","        print(\"選BrandID{}的人，推薦一下品牌。\".format(Brand))\n","    else:\n","        print(\"{0}: {1}\".format(i,df_piv.index[indice.flatten()[i]]))#從喜好排列"],"execution_count":null,"outputs":[{"output_type":"stream","text":["類似UserID:1的User是以下,(推薦電影ID,評価)。\n","UserID:20 \n","[(1, 5.0), (4, 5.0), (25, 5.0)]\n","UserID:41 \n","[(11, 5.0), (17, 5.0), (33, 5.0)]\n","UserID:4 \n","[(6, 5.0), (38, 5.0), (19, 4.5)]\n","UserID:33 \n","[(1, 5.0), (3, 5.0), (7, 5.0)]\n","\n","\n","選BrandID25的人，推薦一下品牌。\n","1: 2\n","2: 35\n","3: 37\n","4: 30\n","5: 26\n","6: 13\n","7: 31\n","8: 36\n","9: 38\n","10: 22\n"],"name":"stdout"}]}]}